void subUnitelMoney(int outroMenu){
    int submenu1;
    switch (outroMenu)
    {
    case 1:
    system("cls");
        printf("=========Escolheu criar conta no UNITEL MONEY========\n");
        printf("1 Para abrir a tua conta Unitel Money digite 1 e escolha enviar para prosseguir\n");

        printf("1) Continuar\n");
        printf("2) Voltar\n");
        scanf("%d", &submenu1);


        if(submenu1 != 2){
            printf("Mostrando informacao deste submenu");
        }else{
            main();
        }
        break;
    
    default:
        printf("Opção inexistente");
        break;
    }
}


